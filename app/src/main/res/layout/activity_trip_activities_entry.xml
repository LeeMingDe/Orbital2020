<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <TextView
            android:id="@+id/text_AddActivities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="60dp"
            android:fontFamily="sans-serif-medium"
            android:text="Add Activities"
            android:textColor="@color/diaryColor"
            android:textSize="36sp" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/addActivityName"
                    android:textSize="18sp"
                    android:textColor="@color/diaryColor"
                    android:text="Activity:"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <EditText
                    android:id="@+id/addActivityNameInput"
                    android:inputType="text"
                    android:hint="Sight-seeing"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/addActivityPlace"
                    android:textSize="18sp"
                    android:textColor="@color/diaryColor"
                    android:text="Place:"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <EditText
                    android:id="@+id/addActivityPlaceInput"
                    android:inputType="text"
                    android:hint="Tapei 101"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/addActivityDate"
                    android:textSize="18sp"
                    android:textColor="@color/diaryColor"
                    android:text="Date:"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <EditText
                    android:id="@+id/addActivityDateInput"
                    android:inputType="date"
                    android:hint="22/05"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/addActivityTime"
                    android:textSize="18sp"
                    android:textColor="@color/diaryColor"
                    android:text="Time:"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <EditText
                    android:id="@+id/addActivityTimeInput"
                    android:inputType="time"
                    android:hint="12:30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp">

                <TextView
                    android:id="@+id/addActivityDescription"
                    android:textSize="18sp"
                    android:textColor="@color/diaryColor"
                    android:text="Description:"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <EditText
                    android:id="@+id/addActivityDescriptionInput"
                    android:inputType="textMultiLine"
                    android:hint="Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </EditText>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp">

        <Button
            android:id="@+id/addActivityButton"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/tripsinputbackground"
            android:layout_gravity="center"
            android:text="ADD"
            android:textColor="#FFF">

        </Button>

        <Button
            android:id="@+id/cancelActivityButton"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/tripsinputbackground"
            android:layout_gravity="center"
            android:text="CANCEL"
            android:textColor="#FFF">

        </Button>

    </LinearLayout>


</LinearLayout>