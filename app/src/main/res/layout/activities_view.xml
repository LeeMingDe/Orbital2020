<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginBottom="0dp"
    android:background="#FFF"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activityName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:fontFamily="sans-serif-light"
            android:text="Sight-seeing"
            android:textColor="@color/diaryColor"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/activityPlace"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:fontFamily="sans-serif-light"
            android:text="Taipei 101"
            android:textColor="#000000"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activityName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activityDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-light"
                android:text="Wednesday, 22 September 2020"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activityPlace" />

            <TextView
                android:id="@+id/activityTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-light"
                android:text="12:30"
                android:textColor="@color/diaryColor"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/activityDate"
                app:layout_constraintTop_toBottomOf="@+id/activityPlace"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/moreActivityButton"
            android:layout_width="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:background="#00FFFFFF"
            android:elevation="0dp"
            app:elevation="0dp">
        </androidx.appcompat.widget.AppCompatImageButton>

    </LinearLayout>





</androidx.cardview.widget.CardView>
