<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/diaryColor</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="montserrat_light">
        <item name="android:fontFamily">@font/montserrat_light</item>
    </style>

    <style name="roboto_light">
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="roboto_regular">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="roboto_medium">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="franchise_bold">
        <item name="android:fontFamily">@font/franchise_bold</item>
    </style>

    <style name="gillsan_condensed">
        <item name="android:fontFamily">@font/gillsan_condensed</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">500dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="notificationSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/enable_track_blue</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/disabled_thumb_grey</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/disabled_track_grey</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
